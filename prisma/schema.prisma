generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  imageUrl     String
  downloadLink String
  category     Category
  platforms    String?  // Android, iOS, Windows, etc
  systemReqs   String?  // System requirements
  gameSpecs    String?  // Game specifications
  views        Int      @default(0)
  createdAt    DateTime @default(now())
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

enum Category {
  ACTION
  WAR
  FOOTBALL
  OPEN_WORLD
  CARS
  LIGHT
  HORROR
  STRATEGY
  CLASSIC
}
